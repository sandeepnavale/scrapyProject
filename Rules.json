{
	"allowed_domains" : ["bbc.com"],
	"start_urls": [
		"http://www.bbc.com/"
	],
	"rules": [
		{
			"allow": ["https://www.bbc.com/news/*"],
			"follow": false,
			"callback": "parseItems"
		}
	],
	"paths": {
		"title" : ["//title/text()"],
        "author": ["//meta[@property='article:author']/@content", "//meta[@name='author']/@content"]
	}
}